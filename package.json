{
    "name": "zimt-cli",
    "version": "0.0.2",
    "description": "The secret ingredient for production-ready NestJS apps",
    "main": "dist/index.js",
    "bin": {
        "zimt": "./dist/bin/zimt.js"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc && npm run copy-templates",
        "copy-templates": "copyfiles -u 1 \"src/templates/**/*\" dist/",
        "start": "ts-node bin/zimt.ts",
        "dev": "ts-node bin/zimt.ts",
        "lint": "eslint 'src/**/*.ts' --fix",
        "format": "prettier --write 'src/**/*.ts'"
    },
    "keywords": [
        "nestjs",
        "cli",
        "auth",
        "generator",
        "boilerplate"
    ],
    "author": "Alexander Kuzmin",
    "license": "MIT",
    "dependencies": {
        "@clack/prompts": "^0.8.2",
        "chalk": "^4.1.2",
        "commander": "^11.0.0",
        "ejs": "^3.1.9",
        "fs-extra": "^11.1.1",
        "inquirer": "^8.2.5",
        "ora": "^5.4.1",
        "ts-morph": "^22.0.0"
    },
    "devDependencies": {
        "@types/ejs": "^3.1.5",
        "@types/fs-extra": "^11.0.1",
        "@types/inquirer": "^9.0.3",
        "@types/node": "^20.19.33",
        "@typescript-eslint/eslint-plugin": "^8.55.0",
        "@typescript-eslint/parser": "^8.55.0",
        "copyfiles": "^2.4.1",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "prettier": "^3.8.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/Alexander-Lucens/zimt-cli.git"
    },
    "bugs": {
        "url": "https://github.com/Alexander-Lucens/zimt-cli/issues"
    },
    "homepage": "https://github.com/Alexander-Lucens/zimt-cli#readme"
}
